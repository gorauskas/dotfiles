!! Screensaver Lock Dialog
!font settings
xscreensaver.Dialog.headingFont:        -*-droid sans mono-bold-*-*-*-17-120-*-*-*-*-iso10646-*
xscreensaver.Dialog.bodyFont:           -*-droid sans mono-bold-*-*-*-17-120-*-*-*-*-iso10646-*
xscreensaver.Dialog.labelFont:          -*-droid sans mono-medium-*-*-*-17-120-*-*-*-*-iso10646-*
xscreensaver.Dialog.unameFont:          -*-envy code r-bold-*-*-*-17-120-*-*-*-*-iso10646-*
xscreensaver.Dialog.buttonFont:         -*-droid sans mono-medium-*-*-*-17-120-*-*-*-*-iso10646-*
xscreensaver.Dialog.dateFont:           -*-droid sans mono-bold-*-*-*-17-120-*-*-*-*-iso10646-*
xscreensaver.passwd.passwdFont:         -*-envy code r-bold-*-*-*-17-120-*-*-*-*-iso10646-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #111111
xscreensaver.Dialog.background:         #ffffff
xscreensaver.Dialog.topShadowColor:     #ffffff
xscreensaver.Dialog.bottomShadowColor:  #ffffff
xscreensaver.Dialog.Button.foreground:  #ffffff
xscreensaver.Dialog.Button.background:  #666666
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #ffffff
xscreensaver.Dialog.text.background:    #666666
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        20
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #1793D1
xscreensaver.passwd.thermometer.background:  #333333
xscreensaver.passwd.thermometer.width:       12
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:                %Y-%m-%d %H:%M:%S
