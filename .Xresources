!! Screensaver Lock Dialog

!font settings
xscreensaver.Dialog.headingFont:        -b&h-lucida-bold-r-*-*-17-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -b&h-lucida-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -b&h-lucida-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -b&h-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -b&h-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -b&h-lucida-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -b&h-lucidatypewriter-bold-r-*-*-14-140-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #ffffff
xscreensaver.Dialog.background:         #333333
xscreensaver.Dialog.topShadowColor:     #111111
xscreensaver.Dialog.bottomShadowColor:  #222222
xscreensaver.Dialog.Button.foreground:  #333333
xscreensaver.Dialog.Button.background:  #EEEEEE
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #CCCCCC
xscreensaver.Dialog.text.background:    #000000
xscreensaver.Dialog.internalBorderWidth:20
xscreensaver.Dialog.borderWidth:        10
xscreensaver.Dialog.shadowThickness:    3
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #ff0000
xscreensaver.passwd.thermometer.background:  #333333
xscreensaver.passwd.thermometer.width:       10
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:                %Y-%m-%d %H:%M:%S
