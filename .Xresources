!
!    xrdb < ~/.Xresources
!
!  ... and then start XTerm or URxvt to see the changes

!! Font defaults
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

!! URxvt definitions
URxvt*termName:               rxvt-unicode-256color
URxvt*transparent:            false
URxvt*inheritPixmap:          false
URxvt*imLocale:               en_US.UTF-8
URxvt*scrollBar:              true
URxvt*scrollBar_right:        false
URxvt*scrollstyle:            plain
URxvt*cursorBlink:            true
URxvt*geometry:               160x60
URxvt*letterSpace:            -1
URxvt*urgentOnBell:           true

URxvt.saveLines:              32767
URxvt.iso14755:               false
URxvt.iso14755_52:            false

URxvt*font:                   xft:Fira Code:pixelsize=14
URxvt*boldFont:               xft:Fira Code:bold:pixelsize=14

URxvt.perl-ext-common:        default,matcher,resize-font,selection-to-clipboard,tabbed

URxvt.underlineURLs:          True
URxvt.url-launcher:           /usr/bin/xdg-open
URxvt.matcher.button:         1
URxvt.matcher.rend.0:         Uline Bold fg8

URxvt.clipboard.autocopy:     true
URxvt.keysym.M-c:             perl:clipboard:copy
URxvt.keysym.M-v:             perl:clipboard:paste

URxvt.tabbed.tabbar-fg: 14
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 12
URxvt.tabbed.tab-bg: 0

!! xterm definitions
xterm*geometry:               160x64
xterm*internalBorder:         10
xterm*loginShell:             true
xterm*scrollBar:              true
xterm*scrollKey:              true
xterm*multiClickTime:         250
xterm*faceName:               Fira Code
xterm*faceSize:               11
xterm*renderFont:             true
xterm*scaleHeight:            1.0
xterm*saveLines:              32767
xterm*dynamicColors:          on
xterm*highlightSelection:     true
xterm*utf8:                   1
xterm*eightBitInput:          true
xterm*metaSendsEscape:        true
xterm*cursorBlink:            true

