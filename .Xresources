! Modified: 2017-10-29 10:06:19
!
! Notes:
!  to test, run the following to source the file:
!
!    xrdb < ~/.Xresources
!
!  ... and then start XTerm or URxvt to see the changes

!! URxvt definitions
URxvt*termName:               rxvt-unicode-256color
URxvt*transparent:            false
URxvt*inheritPixmap:          false
URxvt*imLocale:               en_US.UTF-8
URxvt*scrollBar:              true
URxvt*scrollBar_right:        false
URxvt*scrollstyle:            plain
URxvt*cursorBlink:            false
URxvt*geometry:               160x60
URxvt*letterSpace:            0
URxvt*urgentOnBell:           true

URxvt.saveLines:              32767
URxvt.iso14755:               false
URxvt.iso14755_52:            false

URxvt*font:                   xft:Fira Code:pixelsize=14
URxvt*boldFont:               xft:Fira Code:bold:pixelsize=14

URxvt.perl-ext-common:        default,url-select,tabbedex,fullscreen

! clickable URLs
URxvt.keysym.C-u:             perl:url-select:select_next
URxvt.url-select.launcher:    /usr/bin/google-chrome-stable
URxvt.url-select.underline:   true

! tabbed interface
! Use Shift + Up, Left, Right for Rename, Next, Previous respectively
URxvt.tabbed.autohide:        false
URxvt.tabbed.reopen-on-close: yes
URxvt.tabbed.tabbar-fg:       9
URxvt.tabbed.tabbar-bg:       1
URxvt.tabbed.tab-fg:          12
URxvt.tabbed.tab-bg:          4
! URxvt.keysym.Control-t:       perl:tabbedex:new_tab

! fullscreen
URxvt.keysym.F11:             perl:fullscreen:switch

