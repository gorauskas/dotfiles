## Enable color support for ls
if [ "$TERM" != "dumb" ]; then
    if [[ "$PLATFORM" == "Linux" || "$PLATFORM" == "CYGWIN_NT" || "$PLATFORM" == "MINGW64_NT" ]]; then
        alias dir='ls -alFh --group-directories-first --color=auto --time-style=long-iso'
