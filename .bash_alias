# A function to add an alias to the current shell and
# append it to this file
adda () {
    local name=$1 value="$2"
    echo alias $name=\'$value\' >> ~/.bash_alias
    eval alias $name=\'$value\'
    alias $name
}

# Repeat command N times
#   e.g. repeat 10 echo foo
repeat () {
    local count="$1" i;
    shift;
    for i in $(seq 1 "$count");
    do
        eval "$@";
    done
}

# Sub-Function used by Repeat
seq () {
    local lower upper output;
    lower=$1 upper=$2

    if [ $lower -ge $upper ]; then return; fi

    while [ $lower -le $upper ]; do
        echo -n "$lower "
        lower=$(($lower + 1))
    done
    echo "$lower"
}

#### USER SPECIFIC ALIASES AND FUNCTIONS
## Enable color support for ls
if [ "$TERM" != "dumb" ]; then
    alias dir='ls -alFh --group-directories-first --color=auto --format=long'
    alias ll='ls -aF --color=auto --format=long'
fi
alias lm='dir | less'
alias lr='ls -R'      #recursive ls
alias dots='ls -ldFh .*'

## Navigation
# get rid of command not found ##
alias cd..='cd ..'

# a quick way to get out of current directory ##
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'


### QUERY THE HW

## pass options to free ##
alias meminfo='free -m -l -t'

## get top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
