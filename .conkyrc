background yes
use_xft yes
xftfont DejaVu Sans:size=8
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_argb_visual no
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 240 200
maximum_width 240
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
default_outline_color white
alignment top_right
gap_x 10
gap_y 40
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no

TEXT
${font dejavu sans:bold:size=8}D A T E   &   T I M E ${hr 2}
${alignc 57}${font dejavu sans:normal:size=28}${time %H:%M:%S}${font}
${alignc}${time %Y-%m-%d}

${font dejavu sans:bold:size=8}S Y S T E M ${hr 2}
${font dejavu sans:normal:size=8}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime
File System: $alignr${fs_type}
Battery: $alignr${battery_percent BAT0}%

${font dejavu sans:bold:size=8}P R O C E S S O R S ${hr 2}
${font dejavu sans:normal:size=8}${cpugraph cpu1}
CPU1: ${cpu cpu1}% ${cpubar cpu1}
${font dejavu sans:normal:size=8}${cpugraph cpu2}
CPU2: ${cpu cpu2}% ${cpubar cpu2}

${font dejavu sans:bold:size=8}M E M O R Y ${hr 2}
${font dejavu sans:normal:size=8}RAM $alignc $mem / $memmax $alignr $memperc%
$membar

${font dejavu sans:bold:size=8}D I S K S ${hr 2}
${font dejavu sans:normal:size=8}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
${font dejavu sans:normal:size=8}/home $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_used_perc /home}%
${fs_bar /home}
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}

${font dejavu sans:bold:size=8}T O P   P R O C E S S E S ${hr 2}
${font dejavu sans:normal:size=8}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
$font${top_mem name 3}${alignr}${top mem 3} %
$font${top_mem name 4}${alignr}${top mem 4} %
$font${top_mem name 5}${alignr}${top mem 5} %

${font dejavu sans:bold:size=8}W I R E L E S S ${hr 2}
${font dejavu sans:normal:size=8}IP: $alignr ${addr wlan0}
SSID: $alignr ${wireless_essid wlan0}
Conn qual: $alignr ${wireless_link_qual_perc wlan0}%
${downspeedgraph wlan0}
IN: ${downspeed wlan0} kb/s $alignr total: ${totaldown wlan0}
${upspeedgraph wlan0}
OUT: ${upspeed wlan0} kb/s $alignr total: ${totalup wlan0}

${font dejavu sans:bold:size=8}S H O R T C U T   K E Y S ${hr 2}
${font dejavu sans:normal:size=8}Alt+F2$alignr Run Dialog
Alt+F3$alignr Alt Menu
Super+Space$alignr Main Menu
Super+Tab$alignr Client Menu
Super+t$alignr Terminal
Super+f$alignr File Manager
Super+e$alignr Editor
Super+m$alignr Media Player
Super+w$alignr Web Browser
Super+l$alignr Lock Screen
Super+v$alignr Volume Control
Super+x$alignr Logout
PrtSc$alignr Screenshot
